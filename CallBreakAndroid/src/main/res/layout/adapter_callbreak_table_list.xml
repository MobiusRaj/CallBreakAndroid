<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_91mk"
    android:background="@color/cb_tbl_list_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bet_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹0.1"
        android:textSize="@dimen/_28mk"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="@dimen/_120mk"
        android:layout_marginTop="@dimen/_13mk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activ_player"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activ_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(500 Players Active)"
        android:textSize="@dimen/_20mk"
        android:textColor="@color/white"
        android:alpha="0.5"
        android:fontFamily="@font/barlow_italic"
        android:layout_marginTop="@dimen/_2mk"
        android:layout_marginBottom="@dimen/_8mk"
        app:layout_constraintStart_toStartOf="@id/bet_value"
        app:layout_constraintTop_toBottomOf="@id/bet_value"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="201"
        android:textSize="@dimen/_28mk"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="@dimen/_346mk"
        android:layout_marginEnd="@dimen/_543mk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/open_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/2"
        android:textSize="@dimen/_28mk"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="@dimen/_598mk"
        android:layout_marginEnd="@dimen/_220mk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_play_now"
        android:layout_width="@dimen/_144mk"
        android:layout_height="@dimen/_52mk"
        android:background="@drawable/btn_yes"
        android:text="PLAY NOW"
        android:textSize="@dimen/_16mk"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_45mk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_add_cash"
        android:layout_width="@dimen/_144mk"
        android:layout_height="@dimen/_52mk"
        android:background="@drawable/btn_no"
        android:text="ADD CASH"
        android:textSize="@dimen/_16mk"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_45mk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_lock"
        android:layout_width="@dimen/_144mk"
        android:layout_height="@dimen/_52mk"
        android:background="@color/black"
        android:alpha="0.3"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_45mk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icn_lock"
        android:layout_width="@dimen/_50mk"
        android:layout_height="@dimen/_50mk"
        android:background="@drawable/icn_coupn_lock"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/button_lock"
        app:layout_constraintStart_toStartOf="@id/button_lock"
        app:layout_constraintBottom_toBottomOf="@id/button_lock"
        app:layout_constraintEnd_toEndOf="@id/button_lock"/>

</androidx.constraintlayout.widget.ConstraintLayout>