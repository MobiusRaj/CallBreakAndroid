<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Call Break?"
        android:textSize="@dimen/_50mk"
        android:layout_marginTop="@dimen/_10mk"
        android:textColor="@color/yellow_text"
        android:fontFamily="@font/barlow_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/htp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/htp1"
        android:textSize="@dimen/_35mk"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semibold"
        android:layout_marginTop="@dimen/_30mk"
        app:layout_constraintTop_toBottomOf="@+id/header_txt"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/htp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/htp2"
        android:textSize="@dimen/_35mk"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semibold"
        android:layout_marginTop="@dimen/_30mk"
        app:layout_constraintTop_toBottomOf="@+id/htp_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/htp_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Spades ("
        android:textSize="@dimen/_35mk"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semibold"
        android:layout_marginTop="@dimen/_30mk"
        app:layout_constraintTop_toBottomOf="@+id/htp_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/htp_3_1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/htp_3_1"
        android:layout_width="@dimen/_30mk"
        android:layout_height="@dimen/_30mk"
        android:background="@drawable/spade_icons"
        app:layout_constraintTop_toTopOf="@+id/htp_3"
        app:layout_constraintBottom_toBottomOf="@+id/htp_3"
        app:layout_constraintStart_toEndOf="@id/htp_3"
        app:layout_constraintEnd_toStartOf="@id/htp_4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/htp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/htp3"
        android:textSize="@dimen/_35mk"
        android:textColor="@color/white"
        android:fontFamily="@font/barlow_semibold"
        app:layout_constraintTop_toTopOf="@+id/htp_3"
        app:layout_constraintStart_toEndOf="@id/htp_3_1"
        app:layout_constraintBottom_toBottomOf="@id/htp_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>